# PNPM configuration for monorepo
# Enable workspace support
workspace=true

# Use workspace protocol for internal dependencies
save-workspace-protocol=true

# Prefer exact versions for workspace dependencies
save-exact=false

# Shamefully hoist dependencies (useful for some packages that don't support pnpm well)
shamefully-hoist=false

# Public hoist pattern (hoist dependencies to root node_modules)
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
