{
  "name": "@abpjs/theme-shared",
  "version": "3.1.0",
  "description": "ABP Framework Theme Shared components for React - translated from @abp/ng.theme.shared",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --clean && tsc -p tsconfig.build.json",
    "dev": "tsup src/index.ts --format cjs,esm --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@abpjs/core": "workspace:*",
    "@chakra-ui/react": "^3.2.0",
    "@emotion/react": "^11.11.0",
    "lucide-react": "^0.400.0",
    "next-themes": "^0.4.6",
    "react-hook-form": "^7.48.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@abp/ng.theme.shared": "3.0.0",
    "@vitest/coverage-v8": "^3.2.0"
  },
  "author": "tekthar.com",
  "license": "LGPL-3.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abpjs/abp-react",
    "directory": "packages/theme-shared"
  },
  "homepage": "https://docs.abpjs.io/docs/packages/theme-shared/overview",
  "bugs": {
    "url": "https://github.com/abpjs/abp-react/issues"
  }
}
